<!DOCTYPE html>
<html>
<head>
  <title>Shopping list web app</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  
</head>
<body>

  <div id="user_nav">
  <% if current_user %>
    Welcome back.... <%= current_user.email %><br />
    <br/>
   <%= link_to "Home", root_path %><br />
   <%= link_to "Current shopping list", lists_path %><br />
   <%= link_to "Display search profile", listqueries_path %><br />

  <%= link_to "Log out", log_out_path %><br />
  <br/>
  
  <% else %>
    <%= link_to "Home", root_path %><br />
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "Log in", log_in_path %>
     <br/>
  <% end %>
</div> 


  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %>

<%= yield %>

</body>
</html>
