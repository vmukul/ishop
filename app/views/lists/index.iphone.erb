<div data-role="header">
<h1>Shopping list</h1>
<%= link_to "Log Out", log_out_path, "data-icon" => "plus", "class" => "ui-btn-left", :notice => @cu %>
<%= link_to 'Add', new_list_path, :notice => 'Add items', "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>

<div data-role="content">
  <ul data-role="listview">
      <% @list.each do |list| %>
        <li>
          <%= link_to list.crdate.to_s+", "+list.store+", "+list.item+", "+list.qty, edit_list_path(list), "data-filter" => true %>
          <%= link_to 'Delete',list, :method => :delete,"data-icon" => 'delete' %>
          <% # .strftime("%e-%b") %>
        </li>
     <% end %>
  </ul>
</div>

<div  data-role="footer">
    (c) zLista : <%= flash[:notice] %>
  </div>