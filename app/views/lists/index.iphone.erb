<div data-role="header">
<h1>Shopping list</h1>
<%= link_to "Back", root_path, "data-icon" => "plus", "class" => "ui-btn-left" %>
<%= link_to 'Add', new_list_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>

<div data-role="content">
  <ul data-role="listview">
      <% @list.each do |list| %>
        <li>
          <%= link_to list.crdate.to_s+", "+list.store+", "+list.item+", "+list.qty, edit_list_path(list) %>
          <%= link_to 'Delete',list, :method => :delete,"data-icon" => "delete" %>
        </li>
     <% end %>
  </ul>
</div>